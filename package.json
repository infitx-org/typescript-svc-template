{
  "name": "typescript-svc-template",
  "version": "0.0.23",
  "description": "Template for typescript nodejs projects",
  "license": "Apache-2.0",
  "author": "ModusBox",
  "contributors": [
    "Shashikant Hirugade <shashikant.hirugade@modusbox.com>",
    "Miguel de Barros <miguel.debarros@modusbox.com>"
  ],
  "main": "src/index.ts",
  "scripts": {
    "pretest": "npm run build",
    "test": "npm run test:unit",
    "test:unit": "npx jest --testMatch '**/test/unit/**/*.test.ts'",
    "test:coverage": "npm run test:unit -- --coverage",
    "test:int": "npx jest --testMatch '**/test/int/**/*.test.ts'",
    "build": "npx tsc",
    "watch": "npx tsc -w",
    "start": "npm run start:no-build",
    "start:no-build": "node dist/index.js",
    "start:build": "npm run build && npm run start:no-build",
    "lint": "eslint --ext .js,.ts src --color",
    "lint:fix": "npm run lint -- --fix",
    "audit:resolve": "echo 'TBD' && exit 1",
    "audit:check": "npm audit",
    "clean": "rm -rf ./dist",
    "prepare": "npx husky install",
    "dep:check": "npx ncu -e 2",
    "dep:update": "npx ncu -u",
    "release": "standard-version --no-verify --releaseCommitMessageFormat 'chore(release): {{currentTag}} [skip ci]'",
    "snapshot": "standard-version --no-verify --skip.changelog --prerelease snapshot --releaseCommitMessageFormat 'chore(snapshot): {{currentTag}}'"
  },
  "dependencies": {
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/chai": "^4.3.1",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "chai": "^4.3.6",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "npm-check-updates": "^12.5.11",
    "standard-version": "^9.3.2",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "npx replace '\\[mojaloop/#(\\d+)\\]\\(https://github.com/mojaloop/(.*)/issues/(\\d+)\\)' '[mojaloop/#$1](https://github.com/mojaloop/project/issues/$1)' CHANGELOG.md"
    }
  }
}
